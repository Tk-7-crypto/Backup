<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
    <aura:attribute name="messageTitle" type="String" default="Error" />
    <aura:attribute name="messageBody" type="String" default="" />
    <div class="slds-illustration slds-illustration_large" aria-hidden="true">
        <img src="/img/chatter/Desert.svg" class="slds-illustration__svg" alt="{!v.title}" />
        <div class="slds-text-longform">
            <h3 class="slds-text-heading_medium">{!v.messageTitle}</h3>
            <p class="slds-text-body_regular">{!v.messageBody}</p>
        </div>
    </div>
</aura:component>
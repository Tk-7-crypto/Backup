<aura:component abstract="true">
    <aura:attribute name="showSpinner" type="Boolean" default="false"/>
    <aura:if isTrue="{!v.showSpinner}">
        <lightning:spinner alternativeText = "Loading.." aura:id="spinner" variant="brand" size="large" class="slds-is-fixed"/>
    </aura:if>
    {!v.body}
</aura:component>
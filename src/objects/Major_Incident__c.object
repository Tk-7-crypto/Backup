    <validationRules>
        <fullName>MI_CSM_VR1_ValidateInternalCommunication</fullName>
        <active>true</active>
        <description>Checks if record status is going to be in progress and internal communication is empty</description>
        <errorConditionFormula>AND(
				ISPICKVAL(Status__c, &apos;In Progress&apos;),
				LEN(Major_Incident_Internal_Communication__c) = 0
)</errorConditionFormula>
        <errorDisplayField>Major_Incident_Internal_Communication__c</errorDisplayField>
        <errorMessage>Internal Communication field can&apos;t be empty when the status is In Progress</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>MI_CSM_VR2_AddCaseWithInternalComms</fullName>
        <active>true</active>
        <description>Need to have at least one case when internal communication in not empty before moving to In progress state</description>
        <errorConditionFormula>AND(
				ISPICKVAL(Status__c, &apos;In Progress&apos;),
				Cases_Impacted__c = 0,
				LEN(Major_Incident_Internal_Communication__c)&gt;0
)</errorConditionFormula>
        <errorMessage>At least one case must be added When Internal Communication is not empty before moving to In Progress status</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>MI_CSM_VR3_AddAccountWithExternalComms</fullName>
        <active>true</active>
        <description>Need to have at least one account when customer communication in not empty before moving to In progress state</description>
        <errorConditionFormula>AND(
				ISPICKVAL(Status__c, &apos;In Progress&apos;),
				Accounts_Impacted__c = 0,
				LEN(Major_Incident_Customer_Communication__c)&gt;0
)</errorConditionFormula>
        <errorMessage>At least one account must be added When Customer Communication is not empty before moving to In Progress status</errorMessage>
    </validationRules>
